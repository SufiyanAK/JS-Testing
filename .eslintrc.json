{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "ignorePatterns": ["**/dist/**", "dist/**/*", "./dist/*"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "root": true,
    "rules": {
        "space-before-function-paren": "off",
        "comma-dangle": "off",
        "semi": ["error", "always"]
    }
}